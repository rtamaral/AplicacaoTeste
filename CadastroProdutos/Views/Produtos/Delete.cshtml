@model CadastroProdutos.Models.ProdutoViewModel

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletar Produto</h2>
<h3 class="text-danger">Deseja deletar este produto ?</h3>
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.Nome, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Nome,
                                      new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Descricao, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Descricao,
                                      new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Ativo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.RadioButtonFor(m => m.Ativo, "true", new { disabled = "disabled" })
            <label for="Radio1" class="clslab">Sim</label>

            @Html.RadioButtonFor(m => m.Ativo, "false", new { disabled = "disabled" })
            <label for="Radio2" class="clslab">Não</label>
            @Html.ValidationMessageFor(m => m.Ativo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Categoria, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.CategoriaId,
                               new SelectList(ViewBag.Categorias, "Id", "Nome"),
                               new { disabled = "disabled", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CategoriaId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Perecivel, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.RadioButtonFor(m => m.Perecivel, "true", new { disabled = "disabled" })
            <label for="Radio1" class="clslab">Sim</label>

            @Html.RadioButtonFor(m => m.Perecivel, "false", new { disabled = "disabled" })
            <label for="Radio2" class="clslab">Não</label>
            @Html.ValidationMessageFor(m => m.Ativo, "", new { @class = "text-danger" })
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Deletar Produto" class="btn btn-danger" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    }
</div>
