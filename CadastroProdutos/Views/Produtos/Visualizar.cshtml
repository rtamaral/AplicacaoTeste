@model CadastroProdutos.Models.ProdutoViewModel

@{
    ViewBag.Title = "Visualizar";
}

<h2>Visualizar detalhes do Produto</h2>
<hr />
<div>
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(m => m.Nome, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Nome,
                                   new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Descricao, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Descricao,
                          new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Categoria, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CategoriaId, ((String)ViewBag.Categoria),
                           new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Ativo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.RadioButtonFor(m => m.Ativo, "true", new { disabled = "disabled" })
                <label for="Radio1" class="clslab">Sim</label>

                @Html.RadioButtonFor(m => m.Ativo, "false", new { disabled = "disabled" })
                <label for="Radio2" class="clslab">Não</label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Perecivel, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.RadioButtonFor(m => m.Perecivel, "true", new { disabled = "disabled" })
                <label for="Radio1" class="clslab">Sim</label>

                @Html.RadioButtonFor(m => m.Perecivel, "false", new { disabled = "disabled" })
                <label for="Radio2" class="clslab">Não</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>